<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chatbot</title>
    
    <script src="english.json" defer></script>
    <script src="kannada.json" defer></script>
    <script src="script.js" defer></script>
    <script src="https://unpkg.com/compromise"></script>

  </head>
  <style>
@import url("https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500;600&family=Poppins:wght@200;300&display=swap");
* {
    font-family: Arial, sans-serif;
}
body{

margin: auto;
    padding: 0;
    background-color: #f4f4f4;
}

.container {
    width: 500px;
    border: 1px solid #ccc;
    border-radius: 20px;
    overflow: hidden;
    right:500px;
    font-size: large;

    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);

   

    
  --light-color: #fff;
  height: 700px;
  width: 450px;
  background: var(--light-color);
  position: fixed;
  
  box-shadow: 0px 0px 15px 0px black;

}

.chat-header {
    
    color: white;

    text-align: center;
    height: 70px;
    display: flex;
    align-items: center;
    padding: 0px 30px;
    background-color: #0652c0;
    color: var(--light-color);
    font-size: 1rem;
}

.chat-body{
    height: 500px;

    padding: 20px;
    align-items: flex-end;


  display: flex;
  flex-direction: column ;

  
  overflow:auto;

}
.input-sec {
    flex: 9;
  }
  .send {
    flex: 1;
    padding-right: 4px;
  }
  #txtInput {
    line-height: 30px;
    padding: 8px 10px;
    border: none;
    outline: none;
    caret-color: black;
    font-size: 1rem;
    width: 100%;
  }
  .chatbot-message,
  .user-message {
    padding: 8px;
    background: #ccc;
    margin: 5px;
    width: max-content;
    border-radius: 10px 3px 10px 10px;
  }
  .chatbot-message {
    background: #0652c0;
    color: var(--light-color);
    align-self: flex-start;
    border-radius: 10px 10px 3px 10px;
  }
.chat-input {
    display: flex;
    align-items: center;
    padding: 15px;

    height: 60px;

  
  border-top: 1px solid #ccc;
}

/* Add styles for language select */
.language-select {
    margin-left: auto;
    padding-right: 10px;
  }
  
  /* Style the language select dropdown */
  #language {
    padding: 5px;
  }
  .language-buttons {
    display: flex;
}

.language-button {
    padding: 10px 20px;
    margin: 5px;
    cursor: pointer;
    border: none;
    background-color: #ddd;
    color: #333;
    font-size: 16px;
    outline: none;
}

.language-button.active {
    background-color: blue;
    color: white;
}
  </style>
  <body>
    <div class="container">
      <div class="chat-header">
        <center> <div class="title"><h1>L&I Chatbot</h1></div></center> 
        
            <div class="language-buttons">
                <button class="language-button" id="englishButton" value="en-US">English</button>
                <button class="language-button" id="kannadaButton" value="kn-IN">Kannada</button>
        
          </div>
      
      </div>
      <div class="chat-body"></div>

      <div class="chat-input">
        <div class="input-sec">
          <input type="text" id="txtInput" placeholder="Type here" autofocus />
        </div>
        
        <div class="send">
          <img src="send.png" alt="send" width="40" height="80"/>
          
        </div>
        <div class="mic">
            <img src="microphone.png" alt="microphone" id="micIcon" width="60" height="60" />
        </div>
      </div>
    </div>
  </body>
</html> 

<script src="script.js"></script>
<script src="lang.js"></script>